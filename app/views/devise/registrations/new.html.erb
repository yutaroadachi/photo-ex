<% provide(:title, 'サインアップ') %>
<h1>サインアップ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>

      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>（<%= @minimum_password_length %> 文字以上入力してください）</em>
      <% end %>
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>

      <%= f.submit "サインアップ", class: "btn btn-primary" %>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>