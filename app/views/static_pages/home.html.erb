<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>写真展</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>ようこそ、Photo Exhibitionへ</h1>

  <h2>ここはインターネット上の写真展です</h2>

  <%= link_to "あなたの写真展を開く", sign_up_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>