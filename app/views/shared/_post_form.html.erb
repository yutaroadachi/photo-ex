<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="photo">
    <%= f.file_field :photo, accept: 'image/png,image/jpeg' %>
  </span>
  <div class="field">
    <%= f.text_field :title, placeholder: "写真のタイトルを入力してください" %>
  </div>
  <%= f.submit "展示する", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $('#post_photo').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('写真のサイズは5MB以下にしてください。');
    }
  });
</script>